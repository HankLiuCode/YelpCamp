<% layout("layouts/boilerplate") %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <img class="card-img-top" src="https://images.unsplash.com/photo-1602391833977-358a52198938?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=774&q=80" alt="">
                <div class="card-body">
                    <h5 class="card-title">Login</h5>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="form-control" type="text" , id="username" name="username" autofocus required>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="password">Password</label>
                            <input class="form-control" type="password" , id="password" name="password" required>
                            <div class="valid-feedback">Looks good</div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Log in</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>